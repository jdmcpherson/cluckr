<%- include(`./partials/header`) %>

<div class="container">
    <div class="card">
        <div class="card-body">
            <form action='/cluck' enctype="multipart/form-data" method='POST'>
                <div class='form-group'>
                    <label for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="username" placeholder="Henry Fowler">
                </div>
                <div class='form-group'>
                    <label for="content">Content</label>
                    <textarea class="form-control" id="content" name="content" rows="3" placeholder="What'd ya cockadoodle-do today?"></textarea>
                </div>
                <div class='form-group'>
                    <input type="file" class="form-control" name="image">
                </div>
                <input type="submit" class="btn float-right" value="Cluck!"/>
            </form>
        </div>
    </div>
</div>

<%- include(`./partials/footer`) %>